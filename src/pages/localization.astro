---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Localization" description="Localization" lang="en">
  <!-- Localizations -->
  <section class="w-full bg-white">
    <div class="mx-auto max-w-6xl px-4 md:px-8 py-16 space-y-16">
      <!-- Heading -->
      <h2 data-fly class="text-3xl font-bold text-center">Our Locations</h2>

      <!-- Marseille -->
      <div class="grid gap-8 md:grid-cols-2 items-start">
        <!-- Map (left) -->
        <div class="aspect-[16/10] md:aspect-[4/3] w-full overflow-hidden rounded-xl shadow-sm">
          <iframe
            title="Marseille Office Map"
            class="w-full h-full"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            src="https://www.google.com/maps?q=18%20chemin%20de%20Mimet%2013015%20Marseille%2C%20France&output=embed">
          </iframe>
        </div>

        <!-- Address (right) -->
        <div class="text-left">
          <h3 class="text-xl font-semibold">Marseille, France</h3>
          <p class="mt-2 text-gray-700">
            <a href="mailto:contact@progisud.com" class="text-blue-600 hover:underline">contact@progisud.com</a>
          </p>
          <p class="mt-4 text-gray-700 leading-relaxed">
            18 chemin de Mimet<br/>
            13015 Marseille<br/>
            France
          </p>
        </div>
      </div>

      <!-- Manila -->
      <div class="grid gap-8 md:grid-cols-2 items-start">
        <!-- Map (left) -->
        <div class="aspect-[16/10] md:aspect-[4/3] w-full overflow-hidden rounded-xl shadow-sm">
          <iframe
            title="Manila Office Map"
            class="w-full h-full"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            src="https://www.google.com/maps?q=41%2FF%20Pioneer%20West%20Highlands%20Tower%20II%2C%20Madison%20St.%2C%20Mandaluyong%20City%2C%20Philippines&output=embed">
          </iframe>
        </div>

        <!-- Address (right) -->
        <div class="text-left">
          <h3 class="text-xl font-semibold">Manila â€” Philippines</h3>
          <p class="mt-2 text-gray-700">
            <a href="mailto:contact@progisud.com" class="text-blue-600 hover:underline">contact@progisud.com</a>
          </p>
          <p class="mt-4 text-gray-700 leading-relaxed">
            41/F Pioneer West Highlands Tower II,<br/>
            Madison St., Mandaluyong City<br/>
            Philippines
          </p>
        </div>
      </div>
    </div>
  </section>

</BaseLayout>
