---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
---
<BaseLayout title="Blog" description="Latest posts" lang="en">
  <h1 class="text-3xl font-bold">Blog</h1>
  <ul class="mt-6 grid gap-6 md:grid-cols-2">
    {posts.map(post => (
      <li class="rounded-xl border bg-white p-6 hover:shadow">
        <a href={`/blog/${post.slug}/`} class="block">
          <h2 class="text-xl font-semibold">{post.data.title}</h2>
          <p class="mt-2 text-gray-600 line-clamp-3">{post.data.description}</p>
          <p class="mt-3 text-xs text-gray-500">{new Date(post.data.date).toLocaleDateString()}</p>
        </a>
      </li>
    ))}
  </ul>
</BaseLayout>
