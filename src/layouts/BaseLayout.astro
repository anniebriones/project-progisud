---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
// import Analytics from '../components/Analytics.astro';
import SeoHead from '../components/SeoHead.astro';

// Props
export interface Props {
  title?: string;
  description?: string;
  image?: string;                  // can be "/path.jpg" or full URL
  type?: 'website' | 'article';
  lang?: string;
  noIndex?: boolean;
}

const {
  title = "Progisud SAP Integration & Consulting services",
  description = "Progisud is a SAP Tech Start-up, working on modern solutions like SAP PUBLIC CLOUD, Business AI, BTP Technologiesâ€¦ and expanding our expertise to the entire IT transformation.",
  image = "/images/progisud-logo.jpg", // will be converted to absolute below
  type = "website",
  lang = "en",
  noIndex = false
} = Astro.props as Props;

// --- Site & helpers ---
const site =
  import.meta.env.PUBLIC_SITE_URL ||
  Astro.site?.toString() ||
  'https://progisud-digital-partner.fr';

const abs = (p: string) => new URL(p, site).toString();
const resolvedImage = image?.startsWith('http') ? image : abs(image);

// --- Hreflang (EN <-> FR) ---
const currentPath = Astro.url.pathname;

// Strip a leading "/fr" if present (first segment only)
const basePath = currentPath.replace(/^\/fr(?=\/|$)/, '') || '/';

// Build absolute EN/FR URLs
const enUrl = abs(basePath);
const frUrl = abs(basePath === '/' ? '/fr/' : `/fr${basePath}`);

// OPTIONAL: Only output hreflang for routes that actually have FR pages live.
// Add/remove paths here as you publish more FR pages.
const translated = new Set<string>(['/', '/our-services', '/our-team', '/localization', '/contact-us']);
const showHreflang = translated.has(basePath);
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Centralized SEO head (title/description/OG/Twitter).
         Pass resolvedImage to guarantee absolute URLs for social cards. -->
    <SeoHead {title} {description} image={resolvedImage} {type} lang={lang} />

    <!-- Robots -->
    <meta name="robots" content={noIndex ? "noindex,nofollow" : "index,follow"} />

    <!-- Hreflang alternates (emit only if FR counterpart exists) -->
    {showHreflang && (
      <>
        <link rel="alternate" hreflang="en" href={enUrl} />
        <link rel="alternate" hreflang="fr" href={frUrl} />
        <link rel="alternate" hreflang="x-default" href={enUrl} />
      </>
    )}

    <!-- Favicons / fonts -->
    <link rel="icon" href="/images/progisud-logo.jpg" />
    <link rel="stylesheet" href="/fonts/inter.css" />

    <!-- JSON-LD (hardcoded, validated) -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Progisud",
      "url": "https://progisud-digital-partner.fr",
      "logo": "https://progisud-digital-partner.fr/logo-512x512.png"
    }
    </script>
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "url": "https://progisud-digital-partner.fr",
      "name": "Progisud Digital Partner",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://progisud-digital-partner.fr/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
    </script>
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900 antialiased">
    <Header lang={lang} />
    <main class="mx-auto max-w-6xl px-4 pt-10 pb-0">
      <slot />
    </main>
    <Footer />

    {/*
    <Analytics />
    */}
  </body>
</html>