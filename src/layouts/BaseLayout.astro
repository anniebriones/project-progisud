---
import Seo from "../components/Seo.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
  description?: string;
  lang?: string;
  noIndex?: boolean;
}

const {
  title = "Progisud Digital Partner",
  description = "Your digital needs partner",
  lang = "en",
  noIndex = false
} = Astro.props as Props;
---
<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <Seo {title} {description} lang={lang} noIndex={noIndex} />
    <link rel="icon" href="images/progisud-logo.jpg" />
    <link rel="stylesheet" href="/fonts/inter.css" />
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900 antialiased">
    <Header lang={lang} />
    <main class="mx-auto max-w-6xl px-4 pt-10 pb-0">
      <slot />
    </main>
    <Footer />
  </body>
</html>
