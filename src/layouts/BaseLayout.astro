---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
// import Analytics from '../components/Analytics.astro';
import SeoHead from '../components/SeoHead.astro';

export interface Props {
  title?: string;
  description?: string;
  image?: string; // can be "/path.jpg" or full URL
  type?: 'website' | 'article';
  lang?: string;
  noIndex?: boolean;
}

const {
  title = "Progisud SAP Integration & Consulting services",
  description = "Progisud is a SAP Tech Start-up, working on modern solutions like SAP PUBLIC CLOUD, Business AI, BTP Technologies… and expanding our expertise to the entire IT transformation.",
  image = "/images/progisud-card.jpg",
  type = "website",
  lang = "en",
  noIndex = false
} = Astro.props as Props;

const site =
  import.meta.env.PUBLIC_SITE_URL ||
  Astro.site?.toString() ||
  'https://progisud-digital-partner.fr';

const abs = (p: string) => new URL(p, site).toString();
const resolvedImage = image?.startsWith('http') ? image : abs(image);

// Canonical for this path (normalize trailing slash if you use them)
const canonical = new URL(Astro.url.pathname || '/', site).toString();

// Hreflang (EN <-> FR)
const currentPath = Astro.url.pathname;
const basePath = currentPath.replace(/^\/fr(?=\/|$)/, '') || '/';
const enUrl = abs(basePath);
const frUrl = abs(basePath === '/' ? '/fr/' : `/fr${basePath}`);

const translated = new Set<string>(['/', '/our-services', '/our-team', '/localization', '/contact-us']);
const showHreflang = translated.has(basePath);
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Robots -->
    <meta name="robots" content={noIndex ? "noindex,nofollow" : "index,follow"} />

    <!-- Favicons / PWA -->
    <link rel="icon" href="/images/progisud.jpg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/images/progisud.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/images/progisud.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/images/progisud.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Centralized SEO head -->
    <SeoHead
      {title}
      {description}
      image={resolvedImage}
      {type}
      {lang}
      canonical={canonical}
      siteName="Progisud"
      twitterSite="@progisud"
      imageWidth={1200}
      imageHeight={630}
      imageAlt="Progisud – SAP Integration & Consulting"
    />

    <!-- Hreflang -->
    {showHreflang && (
      <>
        <link rel="alternate" hreflang="en" href={enUrl} />
        <link rel="alternate" hreflang="fr" href={frUrl} />
        <link rel="alternate" hreflang="x-default" href={enUrl} />
      </>
    )}

    <!-- Fonts -->
    <link rel="stylesheet" href="/fonts/inter.css" />

    <!-- JSON-LD -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Progisud",
      "url": "https://progisud-digital-partner.fr",
      "logo": {
        "@type": "ImageObject",
        "url": "https://progisud-digital-partner.fr/progisud.png",
        "width": 512,
        "height": 512
      }
    }
    </script>

    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "url": "https://progisud-digital-partner.fr",
      "name": "Progisud Digital Partner",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://progisud-digital-partner.fr/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
    </script>
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900 antialiased">
    <Header lang={lang} />
    <main class="mx-auto max-w-6xl px-4 pt-10 pb-0">
      <slot />
    </main>
    <Footer />
    {/* <Analytics /> */}
  </body>
</html>
