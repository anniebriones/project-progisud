---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
// import Analytics from '../components/Analytics.astro';
import SeoHead from '../components/SeoHead.astro';

// Props
export interface Props {
  title?: string;
  description?: string;
  image?: string;                  // can be "/path.jpg" or full URL
  type?: 'website' | 'article';
  lang?: string;
  noIndex?: boolean;
}

const {
  title = "Progisud SAP Integration & Consulting services",
  description = "Progisud is a SAP Tech Start-up, working on modern solutions like SAP PUBLIC CLOUD, Business AI, BTP Technologies… and expanding our expertise to the entire IT transformation.",
  image = "/images/progisud-logo.jpg", // will be converted to absolute below
  type = "website",
  lang = "en",
  noIndex = false
} = Astro.props as Props;

// Site & helpers
const site = import.meta.env.PUBLIC_SITE_URL || Astro.site?.toString() || 'https://example.com';
const abs = (p: string) => new URL(p, site).toString();
const resolvedImage = image?.startsWith('http') ? image : abs(image);

// JSON-LD (Organization + Website) — VALID because we stringify objects
const orgLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Progisud",
  "url": site,
  "logo": abs("/logo-512x512.png")
};

const webLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "url": site,
  "name": "Progisud Digital Partner",
  "potentialAction": {
    "@type": "SearchAction",
    "target": abs("/search?q={search_term_string}"),
    "query-input": "required name=search_term_string"
  }
};
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Centralized SEO head (builds title/description/OG/Twitter). -->
    <!-- We pass resolvedImage to guarantee absolute URLs for social cards. -->
    <SeoHead {title} {description} image={resolvedImage} {type} lang={lang} />

    <!-- Robots -->
    <meta name="robots" content={noIndex ? "noindex,nofollow" : "index,follow"} />

    <!-- Favicons / fonts -->
    <link rel="icon" href="/images/progisud-logo.jpg" />
    <link rel="stylesheet" href="/fonts/inter.css" />

    <!-- JSON-LD (one script, array of items) -->
    <script type="application/ld+json">
    {"@context":"https://schema.org","@type":"Organization","name":"Progisud","url":"https://progisud-digital-partner.fr","logo":"https://progisud-digital-partner.fr/images/progisud-logo.jpg"}
    </script>
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900 antialiased">
    <Header lang={lang} />
    <main class="mx-auto max-w-6xl px-4 pt-10 pb-0">
      <slot />
    </main>
    <Footer />

    <!-- Optional analytics -->
    {/*
    <Analytics />
    */}
  </body>
</html>
